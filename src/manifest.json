{  
  "name": "Search-History-Recorder",  
  "icons": {
    "16": "dns16.png",
    "48": "dns48.png",
    "128": "dns128.png"
  },
  "manifest_version": 2,  
  "version": "1.0",  
  "options_page": "options.html",
  "description": "a browser extension help you record the search history",  
  "browser_action": {  
    "default_icon": "1.png",
    "default_popup": "popup.html",
    "default_title": "Google Search Keeper"
  },
  "content_scripts": [  
    {  
      "matches": ["https://google.com/*", "https://www.google.com/*", "http://www.google.com/*", "http://www.google.com/*"],  
      "js": ["main.js"]
    }
  ]
}